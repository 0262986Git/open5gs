@LOCALSTATE_DIR@/log/nextepc.log {
    daily
    sharedscripts
    missingok
    compress
    rotate 14

    postrotate
        for i in nextepc-pcrfd nextepc-pgwd nextepc-sgwd nextepc-hssd nextepc-mmed nextepc-epcd; do
            if [ -e @LOCALSTATE_DIR@/run/$i.pid ] ; then
                kill -HUP `cat @LOCALSTATE_DIR@/run/$i.pid`
            fi
        done
    endscript
}
